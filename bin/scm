#!/bin/sh
DIR=${PWD}

while [[ "${DIR}" != "/" ]]; do
    if [[ -e "${DIR}/scm" ]]; then
        echo "Found SCM script in ${DIR}"
        pushd ${DIR}
        ./scm "${@}"
        popd
        exit
    fi

    DIR=$(dirname "${DIR}")

done

echo "Unable to find SCM script in PWD or above"

exit 1

